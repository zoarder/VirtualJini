<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_image_choose_option_parent_vll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_progress_dialog_background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/spacing_10dp">

    <ImageView
        android:id="@+id/dialog_custom_progress_loading_iv"
        android:layout_width="@dimen/spacing_70dp"
        android:layout_height="@dimen/spacing_70dp"
        android:layout_marginBottom="@dimen/spacing_10dp"
        android:background="@drawable/loading_animation"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/dialog_custom_progress_message_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/normal_text" />

</LinearLayout>