<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_posted_item_layout_parent_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_5dp"
    card_view:elevation="@dimen/spacing_5dp"
    card_view:cardCornerRadius="@dimen/spacing_5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="@dimen/spacing_90dp"
                android:layout_height="@dimen/spacing_150dp">

                <ImageView
                    android:id="@+id/my_posted_item_layout_main_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher" />

                <ProgressBar
                    android:id="@+id/my_posted_item_layout_image_pb"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:indeterminate="false"
                    android:max="100"
                    android:theme="@style/LinearProgress" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/my_posted_item_layout_title_tv"
                        style="?android:textAppearanceSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".7"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Full Furnished Apartment For Rent @ Baridhara Diplomatic Zone"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/my_posted_item_layout_type_tv"
                        style="?android:textAppearanceSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="|  Residential"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_5dp"
                    android:layout_marginTop="@dimen/spacing_5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/my_posted_item_layout_bed_room_tv"
                        style="?android:textAppearanceSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/spacing_10dp"
                        android:drawableLeft="@drawable/bed_room"
                        android:drawablePadding="@dimen/spacing_5dp"
                        android:drawableStart="@drawable/bed_room"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="3"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/my_posted_item_layout_bath_room_tv"
                        style="?android:textAppearanceSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/spacing_10dp"
                        android:drawableLeft="@drawable/bath_room"
                        android:drawablePadding="@dimen/spacing_5dp"
                        android:drawableStart="@drawable/bath_room"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="4"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/my_posted_item_layout_car_parking_tv"
                        style="?android:textAppearanceSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/spacing_10dp"
                        android:drawableLeft="@drawable/dining_room"
                        android:drawablePadding="@dimen/spacing_5dp"
                        android:drawableStart="@drawable/dining_room"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="1"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/my_posted_item_layout_living_room_tv"
                        style="?android:textAppearanceSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/spacing_10dp"
                        android:drawableLeft="@drawable/living_room"
                        android:drawablePadding="@dimen/spacing_5dp"
                        android:drawableStart="@drawable/living_room"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="1"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/my_posted_item_layout_dyning_room_tv"
                        style="?android:textAppearanceSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/car_parking"
                        android:drawablePadding="@dimen/spacing_5dp"
                        android:drawableStart="@drawable/car_parking"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="1"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/my_posted_item_layout_address_tv"
                    style="?android:textAppearanceSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/address"
                    android:drawablePadding="@dimen/spacing_5dp"
                    android:drawableStart="@drawable/address"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="House # 16, Road # 6, Baridhara, Dhaka"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_5dp"
                    android:layout_marginTop="@dimen/spacing_5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/my_posted_item_layout_size_tv"
                        style="?android:textAppearanceSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/spacing_10dp"
                        android:drawableLeft="@drawable/size"
                        android:drawablePadding="@dimen/spacing_5dp"
                        android:drawableStart="@drawable/size"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="3210 Sqft"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/my_posted_item_layout_rent_tv"
                        style="?android:textAppearanceSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/rent"
                        android:drawablePadding="@dimen/spacing_5dp"
                        android:drawableStart="@drawable/rent"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="BDT 160000 per month"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="?android:textAppearanceSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Available From: " />

                    <TextView
                        android:id="@+id/my_posted_item_layout_available_from_tv"
                        style="?android:textAppearanceSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="01/09/2017"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--<View-->
        <!--android:id="@+id/my_posted_item_layout_horizontal_bar_ev_1"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@color/colorAccent" />-->
