        <!--android:id="@+id/my_posted_item_layout_add_wishlist_bt"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@drawable/list_item_full_button_background_selector"-->
