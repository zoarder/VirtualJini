        <!--android:text="@string/add_wishlist"-->
        <!--android:textColor="@android:color/white"-->
        <!--android:textAllCaps="true"-->
        <!--android:textStyle="bold" />-->
    </LinearLayout>
</android.support.v7.widget.CardView>